{
  "name": "zalo-manager",
  "version": "1.0.0",
  "description": "Professional Zalo Desktop Management Tool",
  "main": "dist/main/main.js",
  "homepage": "./",
  "private": true,
  "author": {
    "name": "Zalo Manager Team",
    "email": "support@zalomanager.com"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json && electron dist/main/main.js --dev",
    "start": "electron dist/main/main.js",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:all": "npm run build && electron-builder",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "send:image": "node scripts/send-image-cli.cjs",
    "send:image:son": "node scripts/send-image-cli.cjs --name=\"Văn Sơn\"",
    "send:tpl": "node scripts/send-template-cli.cjs",
    "send:tpl:son": "node scripts/send-template-cli.cjs --tpl=\"test\" --cat=personal --name=\"Văn Sơn\"",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "zustand": "^4.4.7",
    "lucide-react": "^0.294.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0",
    "react-hook-form": "^7.48.2",
    "@hookform/resolvers": "^3.3.2",
    "zod": "^3.22.4",
    "date-fns": "^2.30.0",
    "react-hot-toast": "^2.4.1",
    "framer-motion": "^10.16.5",
    "electron-store": "^8.1.0",
    "uuid": "^9.0.1",
    "papaparse": "^5.4.1",
    "xlsx": "^0.18.5",
    "@electron-toolkit/utils": "^2.0.1",
    "immer": "^10.0.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.7",
    "@types/papaparse": "^5.3.14",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-electron": "^0.15.5",
    "vitest": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "c8": "^8.0.1"
  },
  "build": {
    "appId": "com.zalomanager.app",
    "productName": "Zalo Manager",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ]
    }
  },
  "keywords": [
    "zalo",
    "desktop",
    "management",
    "electron",
    "react",
    "typescript"
  ],
  "license": "MIT"
}
